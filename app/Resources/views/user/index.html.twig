{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li class="active">User List</li>
        <li><a href="{{ path('user_create') }}" title="user_create">Create User</a></li>
        <li><a href="{{ path('group_list') }}" title="group_list">Group List</a></li>
        <li><a href="{{ path('group_create') }}" title="group_create">Create Group</a></li>
    </ol>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>&nbsp;</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>

        <h2 class="page-header">User List</h2>

        {% if users is defined %}
            {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.name }}</td>
                <td><a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary" title="Edit user">Edit</a></td>
                <td><a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger" title="Delete user">Delete</a></td>
            </tr>
            {% endfor %}
        {% else %}
            No
        {% endif %}
        </tbody>
    </table>
{% endblock %}