{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('user_list') }}" title="user_list">User List</a></li>
        <li><a href="{{ path('user_create') }}" title="user_list">Create User</a></li>
        <li class="active">Group List</li>
        <li><a href="{{ path('group_create') }}" title="group_create">Create Group</a></li>
    </ol>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>members</th>
            <th>&nbsp;</th>
        </tr>
        </thead>
        <tbody>

        <h2 class="page-header">Group List</h2>

        {% if groups is defined %}
            {% for group in groups %}
            <tr>
                <th scope="row">{{ group.id }}</th>
                <td>{{ group.name }}</td>
                <td>{{ group.members|length }}</td>
                <td><a href="{{ path('group_details', {'id': group.id}) }}" class="btn btn-default" title="View group">Details</a></td>
                <td><a href="{{ path('group_delete', {'id': group.id}) }}" class="btn btn-danger" title="Delete group">Delete Group</a></td>
            </tr>
            {% endfor %}
        {% else %}
            No
        {% endif %}
        </tbody>
    </table>
{% endblock %}